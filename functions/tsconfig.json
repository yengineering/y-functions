{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "skipLibCheck": true  // Add this line to skip checking of declaration files
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
